<Window x:Class="TelegramChatViewer.LoadingConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Loading Configuration"
        Width="600"
        Height="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource PrimaryBackground}"
        Foreground="{DynamicResource PrimaryText}">

    <Window.Resources>
        <!-- Current theme resources (will be set dynamically) -->
        <SolidColorBrush x:Key="CurrentBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CurrentSecondaryBackground" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="CurrentAccent" Color="#2AABEE"/>
        <SolidColorBrush x:Key="CurrentText" Color="#333333"/>
        <SolidColorBrush x:Key="CurrentSecondaryText" Color="#8C8C8C"/>
        <SolidColorBrush x:Key="CurrentBorder" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="CurrentHover" Color="#F0F0F0"/>
        
        <!-- Official Telegram Light Theme -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#2AABEE"/>
        <SolidColorBrush x:Key="TextBrush" Color="#333333"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#8C8C8C"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="HoverBrush" Color="#F0F0F0"/>
        
        <!-- Official Telegram Dark Theme -->
        <SolidColorBrush x:Key="DarkBackgroundBrush" Color="#202020"/>
        <SolidColorBrush x:Key="DarkSecondaryBackgroundBrush" Color="#2B2B2B"/>
        <SolidColorBrush x:Key="DarkAccentBrush" Color="#2AABEE"/>
        <SolidColorBrush x:Key="DarkTextBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="DarkSecondaryTextBrush" Color="#B0B0B0"/>
        <SolidColorBrush x:Key="DarkBorderBrush" Color="#404040"/>
        <SolidColorBrush x:Key="DarkHoverBrush" Color="#353535"/>

        <!-- Modern button style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource CurrentAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CurrentHover}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#FFCCCCCC"/>
                                <Setter Property="Foreground" Value="#FF888888"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource CurrentAccent}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CurrentAccent}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CurrentAccent}"/>
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource CurrentAccent}"/>
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Checkbox style -->
        <Style x:Key="ModernCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource CurrentText}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- RadioButton style -->
        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource CurrentText}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- ComboBox style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource CurrentSecondaryBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource CurrentText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CurrentBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"/>
                            <ContentPresenter x:Name="ContentSite"
                                            Margin="{TemplateBinding Padding}"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            IsHitTestVisible="False"/>
                            <ToggleButton x:Name="ToggleButton"
                                        Grid.Column="2"
                                        ClickMode="Press"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        HorizontalAlignment="Right"
                                        Width="20"
                                        Content="â–¼"
                                        Foreground="{DynamicResource CurrentText}"/>
                            <Popup x:Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid x:Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="{DynamicResource CurrentBackground}"
                                            BorderBrush="{DynamicResource CurrentBorder}"
                                            BorderThickness="1"
                                            CornerRadius="4"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{DynamicResource CurrentBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource CurrentText}"/>
                        <Setter Property="Padding" Value="8,4"/>
                        <Style.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter Property="Background" Value="{DynamicResource CurrentAccent}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock x:Name="HeaderText" 
                       Text="Configure Chat Loading"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{DynamicResource CurrentText}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>
            
            <TextBlock x:Name="FileInfoText"
                       Text="File: example.json (25.3 MB, 15,432 messages)"
                       FontSize="14"
                       Foreground="{DynamicResource CurrentSecondaryText}"
                       HorizontalAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Loading Strategy Section -->
                <Border Background="{DynamicResource CurrentSecondaryBackground}" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Loading Strategy"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CurrentText}"
                                   Margin="0,0,0,12"/>

                        <RadioButton x:Name="LoadAllRadio"
                                     Content="Load All Messages"
                                     GroupName="LoadingStrategy"
                                     Style="{StaticResource ModernRadioButtonStyle}"
                                     Checked="LoadingStrategy_Changed"/>
                        
                        <TextBlock Text="â€¢ All messages loaded immediately"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,4"/>
                        <TextBlock Text="â€¢ Full search available instantly"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,4"/>
                        <TextBlock Text="â€¢ Slower initial load for large chats"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,12"/>

                        <RadioButton x:Name="ProgressiveRadio"
                                     Content="Progressive Loading (Recommended)"
                                     GroupName="LoadingStrategy"
                                     IsChecked="True"
                                     Style="{StaticResource ModernRadioButtonStyle}"
                                     Checked="LoadingStrategy_Changed"/>
                        
                        <TextBlock Text="â€¢ Fast initial load"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,4"/>
                        <TextBlock Text="â€¢ Messages load as you scroll"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,4"/>
                        <TextBlock Text="â€¢ Better performance for large chats"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,12"/>

                        <RadioButton x:Name="StreamingRadio"
                                     Content="Streaming Mode (Very Large Files)"
                                     GroupName="LoadingStrategy"
                                     Style="{StaticResource ModernRadioButtonStyle}"
                                     Checked="LoadingStrategy_Changed"/>
                        
                        <TextBlock Text="â€¢ Minimal memory usage"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,4"/>
                        <TextBlock Text="â€¢ Virtual scrolling for massive files"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,4"/>
                        <TextBlock Text="â€¢ Best for files >100MB or >50K messages"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,8"/>
                    </StackPanel>
                </Border>

                <!-- Performance Options Section -->
                <Border Background="{DynamicResource CurrentSecondaryBackground}" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="âš¡ Performance Options"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CurrentText}"
                                   Margin="0,0,0,12"/>

                        <CheckBox x:Name="MassiveLoadCheckBox"
                                  Content="Massive Load (5000 messages per scroll)"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Checked="PerformanceOption_Changed"
                                  Unchecked="PerformanceOption_Changed"/>
                        
                        <TextBlock Text="Loads larger chunks for faster navigation through big chats"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,8"/>

                        <CheckBox x:Name="VirtualScrollingCheckBox"
                                  Content="Virtual Scrolling"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Checked="PerformanceOption_Changed"
                                  Unchecked="PerformanceOption_Changed"/>
                        
                        <TextBlock Text="Renders only visible messages for better performance"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,8"/>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <TextBlock Text="Chunk Size:"
                                       FontSize="13"
                                       Foreground="{DynamicResource CurrentText}"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0"/>
                            
                            <ComboBox x:Name="ChunkSizeComboBox"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      Width="150"
                                      SelectionChanged="ChunkSize_Changed">
                                <ComboBoxItem Content="500 (Conservative)" Tag="500"/>
                                <ComboBoxItem Content="1000 (Balanced)" Tag="1000" IsSelected="True"/>
                                <ComboBoxItem Content="2000 (Aggressive)" Tag="2000"/>
                                <ComboBoxItem Content="5000 (Massive)" Tag="5000"/>
                                <ComboBoxItem Content="10000 (Fast)" Tag="10000"/>
                                <ComboBoxItem Content="50000 (Ultra Fast)" Tag="50000"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <TextBlock Text="Number of messages loaded per scroll action"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- UI Options Section -->
                <Border Background="{DynamicResource CurrentSecondaryBackground}" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¨ UI Enhancements"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CurrentText}"
                                   Margin="0,0,0,12"/>

                        <CheckBox x:Name="AlternatingLayoutCheckBox"
                                  Content="Alternating Message Layout"
                                  IsChecked="True"
                                  Style="{StaticResource ModernCheckBoxStyle}"
                                  Checked="UIOption_Changed"
                                  Unchecked="UIOption_Changed"/>
                        
                        <TextBlock Text="Messages alternate left/right for easier conversation following"
                                   FontSize="11"
                                   Foreground="{DynamicResource CurrentSecondaryText}"
                                   Margin="20,0,0,8"/>


                    </StackPanel>
                </Border>

                <!-- Recommendations Section -->
                <Border x:Name="RecommendationsPanel"
                        Background="{DynamicResource CurrentAccent}" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¡ Smart Recommendations"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,12"/>

                        <TextBlock x:Name="RecommendationText"
                                   Text="Based on your file size and message count, we recommend Progressive Loading with Massive Load enabled for optimal performance."
                                   FontSize="13"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12"/>

                        <Button x:Name="ApplyRecommendationsButton"
                                Content="Apply Recommended Settings"
                                Background="White"
                                Foreground="{DynamicResource CurrentAccent}"
                                Style="{StaticResource ModernButtonStyle}"
                                HorizontalAlignment="Left"
                                Click="ApplyRecommendations_Click"/>
                    </StackPanel>
                </Border>

                <!-- Memory Usage Estimate -->
                <Border Background="{DynamicResource CurrentSecondaryBackground}" 
                        CornerRadius="8" 
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Estimated Performance"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource CurrentText}"
                                   Margin="0,0,0,12"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Memory Usage:"
                                           FontSize="13"
                                           Foreground="{DynamicResource CurrentSecondaryText}"/>
                                <TextBlock x:Name="MemoryEstimateText"
                                           Text="~15-25 MB"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource CurrentText}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Initial Load Time:"
                                           FontSize="13"
                                           Foreground="{DynamicResource CurrentSecondaryText}"/>
                                <TextBlock x:Name="LoadTimeEstimateText"
                                           Text="~2-5 seconds"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource CurrentText}"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>
            
            <Button x:Name="LoadButton"
                    Content="Load Chat"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Width="100"
                    Click="Load_Click"/>
        </StackPanel>
    </Grid>
</Window> 